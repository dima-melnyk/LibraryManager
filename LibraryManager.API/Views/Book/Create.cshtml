@model LibraryManager.BusinessLogic.Models.Book.CreateBook

<head>
    <meta charset="utf-8">
    <title>CreateBook</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="format-detection" content="telephone=no">
    <meta name="viewport" content="width=device-width">
    <link type="text/css" rel="stylesheet" href="~/css/createstyle.css">
</head>
<body>
    <div class="mainwrapper">
        <div class="header">
            <div class="clearfix white-line">
                <div class="resize">
                    <div id="butthome" onclick="location.href = '/';">
                        <h1 id="home">Book&Brain</h1>
                    </div>
                    <div id="login">
                        @if (!User.Identity.IsAuthenticated)
                        {
                        <p id="log">
                            <a asp-action="login" asp-controller="auth">Реєстрація &#8226; Вхід</a>
                        </p>
                        }
                        else
                        {
                            <p id="log">
                                @Html.ActionLink("Вийти", "Logout", "Auth")
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="block_row">
            <div class="clearfix block_column">
                <div class="resize">
                    <div class="fields">
                        <h2>Create Book</h2>
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger" style="color: red;"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Назва книги: </label>
                                <input asp-for="Name" class="form-control" placeholder="Harry Potter" />
                                <span asp-validation-for="Name" class="text-danger" style="color: red;"></span>
                            </div><br>
                            <div class="form-group">
                                <label asp-for="Subject" class="control-label">Предмет: </label>
                                <input asp-for="Subject" class="form-control" placeholder="Художня література" />
                                <span asp-validation-for="Subject" class="text-danger" style="color: red;"></span>
                            </div><br>
                            <div class="form-group">
                                <label asp-for="Grade" class="control-label">Курс: </label>
                                <input asp-for="Grade" class="form-control" placeholder="3"/>
                                <span asp-validation-for="Grade" class="text-danger" style="color: red;"></span>
                            </div><br>
                            <div class="form-group">
                                <input asp-for="File" type="file" />
                                <span asp-validation-for="File"></span>
                            </div><br>
                            <div class="form-group">
                                <input type="submit" value="Додати книгу" class="specialbtn" id="butt2" />
                            </div><br />
                        </form>
                        @using (Html.BeginForm("List", "Book", FormMethod.Get))
                        {
                        <input type="submit" class="btn btn-success specialbtn" id="butt3" value="На головну" name="MainPage" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix secwhite-line">
        <div class="resize">
            <div class="footer">
                <div class="paragr">
                    <p>
                        Книга – це мрія, яку ви тримаєте у руках...
                    </p>
                </div>
                <div class="phones">
                    <p id="name">Інтернет магазин</p>
                    <p id="phone">+38(097) 545-23-56</p>
                    <p id="phone">+38(068) 211-47-12</p>
                </div>
            </div>
        </div>
    </div>

    <script src="../js/create.js"></script>
</body>
